        <%- include ("header.ejs") %>
    <h2 class="p-2 border bg-dark text-white">Open roles:</h2>
      <% categorias.forEach(categoria => { %>
      <div>
        <h3><%- categoria.categoria %></h3>
        <ul>
          <% categoria.vagas.forEach(vaga => { %>
            <li>
              <a class="text-decoration-none text-reset" href="/vaga/<%- vaga.id%>">
                <%- vaga.titulo %></a>
            </li>
         <% }) %>

        </ul>
      </div>
      <%}) %>
      
      <%- include ("footer.ejs") %>
